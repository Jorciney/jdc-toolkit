{
  "manifest_version": 2,
  "name": "Colorful Comments for GitLab",
  "version": "1.0",
  "description": "Add colorful comments to merge requests in GitLab.",
  "author": "jorciney.dias@hotmail.com",
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://gitlab.com/*"
      ],
      "js": [
        "scripts/contentScript.js"
      ],
      "css": [
        "styles/contentStyle.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "popup.html"
  ]
}
